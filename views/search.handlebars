<form class="search" action="/search" method="post">
  <input type="text" name="query" value="">
  <label>Save search?</label>
  <input type="checkbox" name="saveSearch" value="1"><br><br>
  <label>Remove a Saved Search</label><br>
  <input type="text" name="deleteSave" value=""><br><br>
  <input type="submit" name="submit" value="Submit">
</form>

<ul>
{{#each savedSearch}}
    <li>{{ this.search }}</li>
{{/each}}
</ul>
